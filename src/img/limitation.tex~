\documentclass[preview]{standalone}
\usepackage{algpseudocode}

\begin{document}
  \begin{algorithmic}[1]
    \If{$a < b$}
      \State $\sigma_a = \sigma (a)$
      \State $\sigma_b = \sigma (b)$
      \State $V[\sigma_a]\gets \bullet$
      \State $V[\sigma_b]\gets \bullet$
      \State $...$
    \EndIf
    \State $...$
  \end{algorithmic}
\end{document}
